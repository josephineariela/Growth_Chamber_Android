<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ProfileEditActivity">


    <ImageView
        android:id="@+id/imageViewAgroCUBE"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/agrocube4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="162dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/TitleColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePic"
        app:layout_constraintTop_toTopOf="@+id/imageViewProfilePic" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/TitleColor"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/textViewUserName"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserName" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="260dp"
        android:text="Name                          :"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginTop="106dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/TitleColor"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAgroCUBE" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:text="Email Address          :"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <EditText
        android:id="@+id/editTextUserEmail"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/TitleColor"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:text="Current Password    :"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <EditText
        android:id="@+id/editTextUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/TitleColor"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserEmail" />


    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:text="Phone Number         :"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewPassword"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassword" />

    <EditText
        android:id="@+id/editTextUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="@color/TitleColor"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/textViewPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserPassword" />

    <TextView
        android:id="@+id/textViewInstance"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:text="Instance                     :"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewPhone"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhone" />


    <EditText
        android:id="@+id/editTextUserInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/TitleColor"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewInstance"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserPhone" />


    <ImageView
        android:id="@+id/imageViewSave"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="172dp"
        android:src="@drawable/save_button"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>